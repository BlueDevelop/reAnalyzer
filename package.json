{
  "name": "reanalyzer",
  "version": "1.0.0",
  "description": "BI",
  "repository": {
    "type": "git",
    "url": "https://github.com/BlueDevelop/reAnalyzer.git"
  },
  "main": "index.js",
  "scripts": {
    "inside": "npm run copy && npm run build",
    "start": "npm run build && node dist/index.js",
    "build": "npm run build:tsc",
    "build:tsc": "npx tsc",
    "build:docker": "npm run build && docker-compose restart reanalyzer",
    "test": "npm run build:tsc && npm run test:run",
    "test:run": "NODE_ENV=test npx mocha src/**/*.spec.ts --opts ./mocha.opts",
    "test:coverage": "npm run build:tsc && npx nyc npm run test:run",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "copy": "cp -r ../mock src/",
    "client": "npm start --prefix client",
    "build:live": "NODE_ENV=local nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "dev": "concurrently \"npm run build:live\" \"npm run client\""
  },
  "bin": {
    "tsc": "./node_modules/.bin/tsc",
    "mocha": "./node_modules/mocha/bin/mocha",
    "nyc": "./node_modules/.bin/nyc"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
