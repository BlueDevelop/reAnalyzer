    "@elastic/elasticsearch": "0.1.0-beta.2",
    "axios": "^0.18.0",
    "bcrypt": "^2.0.0",
    "body-parser": "^1.18.3",
    "concurrently": "^4.1.0",
    "connect-mongo": "^2.0.1",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "elastic-apm-node": "1.12.0",
    "elasticsearch": "15.4.1",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "html-entities": "^1.2.1",
    "lodash": "^4.17.11",
    "mongoose": "^5.2.15",
    "morgan": "^1.9.1",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "passport-saml": "^0.35.0",
    "striptags": "^3.1.1",
    "winston": "^2.4.4",
    "winston-daily-rotate-file": "3.3.3"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/bcrypt": "^2.x.x",
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.4",
    "@types/chai-as-promised": "^7.1.0",
    "@types/chai-http": "^3.0.5",
    "@types/connect-mongo": "0.0.39",
    "@types/cookie-parser": "^1.4.1",
    "@types/cors": "^2.8.4",
    "@types/elastic-apm-node": "1.0.0",
    "@types/elasticsearch": "5.0.26",
    "@types/express": "^4.16.0",
    "@types/express-session": "^1.15.11",
    "@types/lodash": "^4.14.117",
    "@types/mocha": "^5.2.5",
    "@types/mongoose": "^5.2.15",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.10.0",
    "@types/passport": "^0.4.6",
